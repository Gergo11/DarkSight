<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="false"
        android:scaleType="fitXY"
        android:src="@drawable/bg_left_tab" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtInputTitle"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/txtInputTitle"
            android:textAlignment="center"
            android:textColor="@color/colorText"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtUserName"
            android:layout_width="293dp"
            android:layout_height="40dp"
            android:layout_marginTop="130dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:hint="@string/txtInpUserName" />
            <ImageButton
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginTop="130dp"
                android:background="@drawable/user_name_selector"
                android:id="@+id/btnSetUserName"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true">
            <android.support.v7.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chkRemember"
                android:layout_marginTop="180dp"/>

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txtInIP"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="180dp"
                android:hint="@string/txtInpIP" />

            <ImageButton
                android:id="@+id/btnConnect"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginTop="180dp"
                android:background="@drawable/connect_selector"
                android:textColor="@color/colorText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="horizontal"
            android:layout_alignParentStart="true">

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spSavedIp"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_marginTop="220dp"
                android:prompt="@string/spinner_prompt"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/txtIPTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:text="@string/txtIPTitle"
                android:textColor="@color/colorText"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtIP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:text="@string/txtIp"
                android:textColor="@color/colorText"
                android:textSize="15sp" />
        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logo_large_left"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:src="@drawable/logo_large" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="horizontal"
            android:layout_centerHorizontal="false"
            android:layout_alignParentEnd="true" >
            <ImageButton
                android:layout_width="80dp"
                android:id="@+id/btnDisconnect"
                android:layout_height="40dp"
                android:layout_marginTop="221dp"
                android:layout_marginEnd="-1dp"
                android:background="@drawable/disconnect_selector"
                />
        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>